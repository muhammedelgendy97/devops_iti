#!/usr/bin/env groovy

@library('shared-library') _

pipeline {
    agent any
    tools {
        maven 'mvn'
    }
    stages {
        stage("build jar") {
            steps {
                script {
                   buildJar()
                }
            }
        }
        stage("build image") {
            steps {
                script {
                    buildImage('mohamedelgendy/my-repo:1.2')
                }
            }
        }
        stage("deploy") {
            steps {
                script {
                   deployFunc()
                }
            }
        }
    }
}
