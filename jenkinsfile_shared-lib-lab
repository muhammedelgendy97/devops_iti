#!/usr/bin/env groovy

@Library('shared-library')

def gv
pipeline {
    agent any
    tools {
        maven 'mvn'
    }
    stages {
        stage("init") {
            steps {
                script {
                    gv = load "script.groovy"
                }
            }
        }
        stage("build jar") {
            steps {
                script {
                   buildJar()
                }
            }
        }
        stage("build image") {
            steps {
                script {
                    buildImage()
                }
            }
        }
        stage("deploy") {
            steps {
                script {
                   deployFunc()
                }
            }
        }
    }
}
