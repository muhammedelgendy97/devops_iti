#!/usr/bin/env groovy

library identifier: 'shared-library@master', retriever: modernSCM(
        [$class: 'GitSCMSource', 
         remote: 'https://github.com/muhammedelgendy97/jenkins_shared_library.git',
         #credentialsId:'gitlab-credentials'
        ]
)

pipeline {
    agent any
    tools {
        maven 'mvn'
    }
    stages {
        stage("build jar") {
            steps {
                script {
                   buildJar()
                }
            }
        }
        stage("build image") {
            steps {
                script {
                    buildImage('mohamedelgendy/my-repo:1.2')
                }
            }
        }
        stage("deploy") {
            steps {
                script {
                   deployFunc()
                }
            }
        }
    }
}
