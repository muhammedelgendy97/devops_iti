#!/usr/bin/env groovy

pipeline {
    agent any
    stages {
        stage('build') {
            when {
                expression {
                    BRANCH_NAME == 'main'
                }
            }
            steps {
                script {
                    echo "Building the application "
                }
            }
        }
        stage('test') {
      
            steps {
                script {
                    echo "Testing the application..."
                }
            }
        }
        stage('deploy') {
            when {
                expression {
                    BRANCH_NAME == 'main'
                }
            }
            steps {
                script {
                    sshagent(['ec2-server-key']) {
                        def dockerCmd= 'docker run -d -p 3080:3080 mohamedelgendy/my-repo:1.2'
                        "ssh -o StrictHostKeyChecking=no ubuntu@107.23.204.213 ${dockerCmd}"
                }
                 
                }
            }
        }
    }
}
