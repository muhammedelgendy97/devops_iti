#!/usr/bin/env groovy

pipeline {
    agent any
    stages {
        stage('build') {
            steps {
                script {
                    echo "Building the application "
                }
            }
        }
        stage('test') {
      
            steps {
                script {
                    echo "Testing the application..."
                }
            }
        }
        stage('deploy') {
            steps {
                script {
                    sshagent(['ec2-server-key']) {
                        def dockerCmd= 'docker run -d -p 8081:8081 --name nexus sonatype/nexus3'
                        sh "ssh -o StrictHostKeyChecking=no ubuntu@107.23.204.213 ${dockerCmd}"
                }
                 
                }
            }
        }
    }
}
